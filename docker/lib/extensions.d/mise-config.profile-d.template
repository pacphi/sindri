#!/bin/bash
# mise activation for all sessions (interactive and non-interactive)
# This ensures mise-managed tools are available in SSH remote commands

# Add mise binary to PATH if not already present
if [[ -d "$HOME/.local/bin" ]] && [[ ":$PATH:" != *":$HOME/.local/bin:"* ]]; then
    export PATH="$HOME/.local/bin:$PATH"
fi

# Activate mise if available
if command -v mise >/dev/null 2>&1; then
    eval "$(mise activate bash 2>/dev/null || true)"
fi
