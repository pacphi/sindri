#!/bin/bash
# agentic-flow.aliases - Multi-model AI integration aliases
# Installed by agentic-flow extension

# ============================================================================
# AGENT-FLOW (MULTI-MODEL AI)
# ============================================================================

# Core Commands
alias af="agentic-flow"
alias af-help="agentic-flow --help"
alias af-coder="agentic-flow --agent coder --task"
alias af-reviewer="agentic-flow --agent reviewer --task"
alias af-researcher="agentic-flow --agent researcher --task"

# Provider Integration
alias af-claude="agentic-flow claude-code"
alias af-openrouter="agentic-flow claude-code --provider openrouter"
alias af-gemini="agentic-flow claude-code --provider gemini"

# Model-Specific Shortcuts (Cost-Optimized)
alias af-llama="agentic-flow --model meta-llama/llama-3.1-8b-instruct"
alias af-cost="agentic-flow --optimize cost"
alias af-speed="agentic-flow --optimize speed"
alias af-quality="agentic-flow --optimize quality"

# ============================================================================
# UTILITY FUNCTIONS
# ============================================================================

# Execute task with specific agent and balanced optimization
af-task() {
    agentic-flow --agent "${1:-coder}" --task "$2" --optimize balanced
}

# Execute command with specific provider
af-provider() {
    local provider="${1:-openrouter}"
    shift
    agentic-flow claude-code --provider "$provider" "$@"
}
