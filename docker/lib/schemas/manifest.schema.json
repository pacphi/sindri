{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sindri.dev/schemas/manifest.schema.json",
  "title": "Sindri Extension Manifest",
  "description": "Schema for extension activation manifest",
  "type": "object",
  "required": ["version", "extensions"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "active", "category"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "active": {
            "type": "boolean"
          },
          "protected": {
            "type": "boolean",
            "description": "If true, cannot be deactivated",
            "default": false
          },
          "category": {
            "type": "string",
            "enum": [
              "base",
              "language",
              "dev-tools",
              "infrastructure",
              "ai",
              "utilities"
            ]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "execution": {
          "type": "object",
          "properties": {
            "parallel": {
              "type": "boolean",
              "default": false
            },
            "failFast": {
              "type": "boolean",
              "default": true
            },
            "timeout": {
              "type": "integer",
              "minimum": 0,
              "default": 600
            }
          }
        },
        "validation": {
          "type": "object",
          "properties": {
            "schemaValidation": {
              "type": "boolean",
              "default": true
            },
            "dnsCheck": {
              "type": "boolean",
              "default": true
            },
            "dependencyCheck": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}
