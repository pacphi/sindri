{
  "name": "sindri",
  "version": "2.0.0",
  "description": "A complete AI-powered cloud development forge",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pacphi/sindri.git"
  },
  "scripts": {
    "validate": "pnpm validate:yaml && pnpm validate:shell && pnpm validate:markdown",
    "validate:yaml": "sh -c 'find docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint && yamllint .github/workflows/*.yml'",
    "validate:shell": "sh -c 'find docker/scripts docker/lib/extensions .github/scripts cli deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "validate:markdown": "markdownlint '**/*.md'",
    "test": "pnpm test:unit",
    "test:unit": "bash test/unit/yaml/run-all-yaml-tests.sh",
    "test:extensions": "./cli/extension-manager validate-all",
    "lint": "pnpm lint:yaml && pnpm lint:shell && pnpm lint:md",
    "lint:yaml": "sh -c 'find docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint --strict && yamllint --strict .github/workflows/*.yml'",
    "lint:shell": "sh -c 'find docker/scripts docker/lib/extensions .github/scripts cli deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "lint:md": "markdownlint '**/*.md'",
    "lint:md:fix": "markdownlint '**/*.md' --fix",
    "format": "prettier --write '**/*.{json,yaml,yml,md}'",
    "format:check": "prettier --check '**/*.md' '**/*.json' '**/*.yml' '**/*.yaml'",
    "format:md": "prettier --write '**/*.md'",
    "deps:check": "ncu",
    "deps:check:minor": "ncu --target minor",
    "deps:check:patch": "ncu --target patch",
    "deps:upgrade": "ncu -u",
    "deps:upgrade:minor": "ncu -u --target minor",
    "deps:upgrade:patch": "ncu -u --target patch",
    "deps:upgrade:interactive": "ncu -i",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "security": "pnpm audit",
    "build": "docker build -t sindri:local -f Dockerfile .",
    "build:latest": "docker build -t sindri:latest -f Dockerfile .",
    "build:nocache": "docker build --no-cache -t sindri:latest -f Dockerfile .",
    "build:faq": "node docs/faq/build.mjs",
    "deploy": "./cli/sindri deploy",
    "deploy:docker": "./cli/sindri deploy --provider docker",
    "deploy:fly": "./cli/sindri deploy --provider fly",
    "deploy:fly:rebuild": "./cli/sindri deploy --provider fly --rebuild",
    "deploy:devpod": "./cli/sindri deploy --provider devpod",
    "connect": "./cli/sindri connect",
    "config:init": "./cli/sindri config init",
    "config:validate": "./cli/sindri config validate",
    "extensions:list": "./cli/extension-manager list",
    "extensions:install": "./cli/extension-manager install",
    "extensions:search": "./cli/extension-manager search",
    "profiles:list": "./cli/sindri profiles list"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "js-yaml": "^4.1.1",
    "markdownlint-cli": "^0.46.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.1",
    "yaml-lint": "^1.7.0"
  },
  "keywords": [
    "sindri",
    "cloud",
    "development",
    "ai",
    "devcontainer",
    "docker",
    "fly.io"
  ],
  "author": "Sindri Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
