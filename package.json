{
  "name": "sindri",
  "version": "2.0.0",
  "description": "A complete AI-powered cloud development forge",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pacphi/sindri.git"
  },
  "scripts": {
    "format": "prettier --write '**/*.{json,md}'",
    "format:check": "prettier --check '**/*.{json,md}'",
    "links:check": "lychee --verbose --scheme file --include-fragments --exclude-path node_modules --exclude-path .git '**/*.md'",
    "links:check:external": "lychee --verbose --scheme https --scheme http --exclude '^http://localhost' --exclude '^https://localhost' --timeout 20 --accept 200,206,301,302,307,308,429,999 '**/*.md'",
    "links:check:all": "pnpm links:check && pnpm links:check:external",
    "deps:check": "pnpm deps:check:npm && pnpm deps:check:cargo",
    "deps:check:npm": "ncu",
    "deps:check:npm:minor": "ncu --target minor",
    "deps:check:npm:patch": "ncu --target patch",
    "deps:check:cargo": "cd v3 && cargo outdated --workspace --root-deps-only",
    "deps:check:cargo:verbose": "cd v3 && cargo outdated --workspace",
    "deps:upgrade": "pnpm deps:upgrade:npm && pnpm deps:upgrade:cargo",
    "deps:upgrade:npm": "ncu -u",
    "deps:upgrade:npm:minor": "ncu -u --target minor",
    "deps:upgrade:npm:patch": "ncu -u --target patch",
    "deps:upgrade:npm:interactive": "ncu -i",
    "deps:upgrade:cargo": "cd v3 && cargo upgrade",
    "deps:upgrade:cargo:compatible": "cd v3 && cargo upgrade --compatible",
    "deps:upgrade:cargo:incompatible": "cd v3 && cargo upgrade --incompatible",
    "deps:upgrade:cargo:interactive": "cd v3 && cargo upgrade --dry-run",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "v2:ci": "pnpm v2:validate && pnpm v2:build",
    "v2:validate": "pnpm v2:validate:yaml && pnpm v2:validate:shell && pnpm v2:validate:markdown",
    "v2:validate:yaml": "sh -c 'find v2/docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint'",
    "v2:validate:shell": "sh -c 'find v2/docker/scripts v2/docker/lib/extensions .github/scripts v2/cli v2/deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "v2:validate:markdown": "markdownlint 'v2/**/*.md'",
    "v2:lint": "pnpm v2:lint:yaml && pnpm v2:lint:shell && pnpm v2:lint:markdown",
    "v2:lint:yaml": "sh -c 'find v2/docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint --strict'",
    "v2:lint:shell": "sh -c 'find v2/docker/scripts v2/docker/lib/extensions .github/scripts v2/cli v2/deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "v2:lint:markdown": "markdownlint 'v2/**/*.md'",
    "v2:test": "pnpm v2:test:unit",
    "v2:test:unit": "bash v2/test/unit/yaml/run-all-yaml-tests.sh",
    "v2:test:extensions": "./v2/cli/extension-manager validate-all",
    "v2:config:init": "./v2/cli/sindri config init",
    "v2:config:validate": "./v2/cli/sindri config validate",
    "v2:build": "docker build -t sindri:v2-local -f v2/Dockerfile .",
    "v2:build:latest": "docker build -t sindri:v2-latest -f v2/Dockerfile .",
    "v2:build:nocache": "docker build --no-cache -t sindri:v2-latest -f v2/Dockerfile .",
    "v2:deploy": "./v2/cli/sindri deploy",
    "v2:deploy:docker": "./v2/cli/sindri deploy --provider docker",
    "v2:deploy:devpod": "./v2/cli/sindri deploy --provider devpod",
    "v2:deploy:fly": "./v2/cli/sindri deploy --provider fly",
    "v2:deploy:fly:rebuild": "./v2/cli/sindri deploy --provider fly --rebuild",
    "v2:extensions:list": "./v2/cli/extension-manager list",
    "v2:extensions:install": "./v2/cli/extension-manager install",
    "v2:extensions:search": "./v2/cli/extension-manager search",
    "v2:profiles:list": "./v2/cli/sindri profiles list",
    "v2:connect": "./v2/cli/sindri connect",
    "v3:ci": "pnpm v3:validate && pnpm v3:build",
    "v3:validate": "pnpm v3:validate:yaml && pnpm v3:validate:rust",
    "v3:validate:yaml": "sh -c 'find v3/extensions v3/schemas -name \"*.yaml\" -o -name \"*.yml\" 2>/dev/null | xargs yamllint || echo \"No v3 YAML to validate\"'",
    "v3:validate:markdown": "markdownlint 'v3/**/*.md'",
    "v3:validate:rust": "cd v3 && cargo fmt --check && cargo clippy --workspace -- -D warnings",
    "v3:lint": "pnpm v3:lint:yaml && pnpm v3:lint:markdown && pnpm v3:clippy",
    "v3:lint:yaml": "sh -c 'find v3/extensions v3/schemas -name \"*.yaml\" -o -name \"*.yml\" 2>/dev/null | xargs yamllint --strict || echo \"No v3 YAML to lint\"'",
    "v3:lint:markdown": "markdownlint 'v3/**/*.md'",
    "v3:check": "cd v3 && cargo check --workspace",
    "v3:test": "cd v3 && cargo test --workspace",
    "v3:build": "cd v3 && cargo build --release",
    "v3:clippy": "cd v3 && cargo clippy --workspace -- -D warnings",
    "v3:fmt": "cd v3 && cargo fmt --all -- --check",
    "v3:fmt:fix": "cd v3 && cargo fmt --all",
    "v3:audit": "cd v3 && cargo audit",
    "v3:doc": "cd v3 && cargo doc --workspace --no-deps --all-features --open",
    "build:faq": "node docs/faq/build.mjs"
  },
  "devDependencies": {
    "@actions/core": "^2.0.2",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^7.0.0",
    "js-yaml": "^4.1.1",
    "markdownlint-cli": "^0.47.0",
    "npm-check-updates": "^19.3.1",
    "prettier": "^3.8.0",
    "yaml-lint": "^1.7.0"
  },
  "keywords": [
    "sindri",
    "cloud",
    "development",
    "ai",
    "devcontainer",
    "docker",
    "fly.io"
  ],
  "author": "Sindri Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "undici": ">=6.23.0"
    }
  }
}
