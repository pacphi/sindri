{
  "name": "sindri",
  "version": "2.0.0",
  "description": "A complete AI-powered cloud development forge",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pacphi/sindri.git"
  },
  "scripts": {
    "validate": "pnpm validate:yaml && pnpm validate:shell && pnpm validate:markdown",
    "validate:yaml": "sh -c 'find v2/docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint && yamllint .github/workflows/*.yml'",
    "validate:shell": "sh -c 'find v2/docker/scripts v2/docker/lib/extensions .github/scripts v2/cli v2/deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "validate:markdown": "markdownlint '**/*.md'",
    "test": "pnpm test:unit",
    "test:unit": "bash v2/test/unit/yaml/run-all-yaml-tests.sh",
    "test:extensions": "./v2/cli/extension-manager validate-all",
    "lint": "pnpm lint:yaml && pnpm lint:shell && pnpm lint:md",
    "lint:yaml": "sh -c 'find v2/docker/lib -name \"*.yaml\" -o -name \"*.yml\" | xargs yamllint --strict && yamllint --strict .github/workflows/*.yml'",
    "lint:shell": "sh -c 'find v2/docker/scripts v2/docker/lib/extensions .github/scripts v2/cli v2/deploy -name \"*.sh\" -type f -not -path \"*/terminal-init/*\" 2>/dev/null | xargs shellcheck -S warning'",
    "lint:md": "markdownlint '**/*.md'",
    "lint:md:fix": "markdownlint '**/*.md' --fix",
    "format": "prettier --write '**/*.{json,yaml,yml,md}'",
    "format:check": "prettier --check '**/*.md' '**/*.json' '**/*.yml' '**/*.yaml'",
    "format:md": "prettier --write '**/*.md'",
    "links:check": "lychee --verbose --scheme file --include-fragments --exclude-path node_modules --exclude-path .git '**/*.md'",
    "links:check:external": "lychee --verbose --scheme https --scheme http --exclude '^http://localhost' --exclude '^https://localhost' --timeout 20 --accept 200,206,301,302,307,308,429,999 '**/*.md'",
    "links:check:all": "pnpm links:check && pnpm links:check:external",
    "deps:check": "ncu",
    "deps:check:minor": "ncu --target minor",
    "deps:check:patch": "ncu --target patch",
    "deps:upgrade": "ncu -u",
    "deps:upgrade:minor": "ncu -u --target minor",
    "deps:upgrade:patch": "ncu -u --target patch",
    "deps:upgrade:interactive": "ncu -i",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "security": "pnpm audit",
    "v2:validate": "pnpm validate",
    "v2:test": "pnpm test",
    "v2:build": "docker build -t sindri:v2-local -f v2/Dockerfile .",
    "v2:build:latest": "docker build -t sindri:v2-latest -f v2/Dockerfile .",
    "v2:build:nocache": "docker build --no-cache -t sindri:v2-latest -f v2/Dockerfile .",
    "v2:deploy": "./v2/cli/sindri deploy",
    "v2:deploy:docker": "./v2/cli/sindri deploy --provider docker",
    "v2:deploy:fly": "./v2/cli/sindri deploy --provider fly",
    "v2:deploy:devpod": "./v2/cli/sindri deploy --provider devpod",
    "v2:connect": "./v2/cli/sindri connect",
    "v3:check": "cd v3 && cargo check --workspace",
    "v3:test": "cd v3 && cargo test --workspace",
    "v3:build": "cd v3 && cargo build --release",
    "v3:clippy": "cd v3 && cargo clippy --workspace -- -D warnings",
    "v3:fmt": "cd v3 && cargo fmt --all -- --check",
    "v3:fmt:fix": "cd v3 && cargo fmt --all",
    "build": "pnpm v2:build",
    "build:latest": "pnpm v2:build:latest",
    "build:nocache": "pnpm v2:build:nocache",
    "build:faq": "node docs/faq/build.mjs",
    "deploy": "pnpm v2:deploy",
    "deploy:docker": "pnpm v2:deploy:docker",
    "deploy:fly": "pnpm v2:deploy:fly",
    "deploy:fly:rebuild": "./v2/cli/sindri deploy --provider fly --rebuild",
    "deploy:devpod": "pnpm v2:deploy:devpod",
    "connect": "pnpm v2:connect",
    "config:init": "./v2/cli/sindri config init",
    "config:validate": "./v2/cli/sindri config validate",
    "extensions:list": "./v2/cli/extension-manager list",
    "extensions:install": "./v2/cli/extension-manager install",
    "extensions:search": "./v2/cli/extension-manager search",
    "profiles:list": "./v2/cli/sindri profiles list"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "js-yaml": "^4.1.1",
    "markdownlint-cli": "^0.46.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.1",
    "yaml-lint": "^1.7.0"
  },
  "keywords": [
    "sindri",
    "cloud",
    "development",
    "ai",
    "devcontainer",
    "docker",
    "fly.io"
  ],
  "author": "Sindri Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
