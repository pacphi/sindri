{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sindri.dev/schemas/registry.schema.json",
  "title": "Sindri Extension Registry",
  "description": "Schema for the extension registry",
  "type": "object",
  "required": ["version", "extensions"],
  "properties": {
    "version": {
      "type": ["string", "number"],
      "description": "Schema version"
    },
    "extensions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["category", "description"],
        "properties": {
          "category": {
            "type": "string",
            "enum": [
              "ai-agents",
              "ai-dev",
              "claude",
              "cloud",
              "desktop",
              "devops",
              "documentation",
              "languages",
              "mcp",
              "package-manager",
              "productivity",
              "research",
              "testing"
            ],
            "description": "Category this extension belongs to"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "description": "Human-readable description of the extension"
          },
          "protected": {
            "type": "boolean",
            "default": false,
            "description": "Whether this extension is protected (cannot be removed)"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of extension names this extension depends on"
          },
          "conflicts": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of extension names that conflict with this extension (mutually exclusive)"
          }
        },
        "additionalProperties": false
      },
      "description": "Map of extension names to their registry entries"
    }
  },
  "additionalProperties": false
}
